<Window x:Class="DAPP.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAPP.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="200" ResizeMode="NoResize">
    <Grid>
    <StackPanel VerticalAlignment="Center">
      <Button x:Name="ManualModeButton" Content="Manual mode" Margin="20" Click="ManualModeButton_Click"></Button>
      <Button x:Name="AutomaticModeButton" Content="Automatic mode" Margin="20" Click="AutomaticModeButton_Click"></Button>
    </StackPanel>
    </Grid>
</Window>
